{
  "compilerOptions": {
    "target": "ESNext",

    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@chorro-pets/common/domain/*": ["packages/common/common-domain/src/*"],
      "@chorro-pets/domain/*": ["packages/domain/src/*"]
    },

    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true
  }
}
